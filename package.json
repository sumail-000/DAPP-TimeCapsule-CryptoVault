{
  "name": "timecapsule-vault",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "compile": "hardhat compile",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy-mainnet.js --network mainnet",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:mainnet": "hardhat verify --network mainnet",
    "typechain": "typechain --target ethers-v6 --out-dir src/typechain",
    "clean": "hardhat clean && rm -rf dist coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "analyze": "npm run build && npx bundle-analyzer dist/assets/*.js",
    "security:audit": "npm audit && npm audit fix",
    "docker:build": "docker build -t timecapsule-vault .",
    "docker:run": "docker run -p 3000:3000 timecapsule-vault"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.4.0",
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@rainbow-me/rainbowkit": "^2.2.6",
    "@react-spring/web": "^10.0.1",
    "@tanstack/react-query": "^5.80.6",
    "@types/crypto-js": "^4.2.2",
    "alchemy-sdk": "^3.6.2",
    "crypto-js": "^4.2.0",
    "date-fns": "^3.5.0",
    "ethers": "^6.14.3",
    "framer-motion": "^11.18.2",
    "moment": "^2.30.1",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-countdown": "^2.3.5",
    "react-datepicker": "^8.4.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.2",
    "recharts": "^2.15.4",
    "sharp": "^0.34.3",
    "viem": "^2.31.0",
    "wagmi": "^2.15.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.11",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.11",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.14",
    "@nomicfoundation/ignition-core": "^0.15.11",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.30",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "chai": "^4.5.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "hardhat": "^2.24.2",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
